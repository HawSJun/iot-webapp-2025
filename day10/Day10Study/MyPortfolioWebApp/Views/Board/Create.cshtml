@model MyPortfolioWebApp.Models.Board

@{
    ViewData["Title"] = "게시글 작성";
}

<section class="py-5" style="background-color: #f9fafb;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <h1 class="mb-4 fw-semibold text-center">게시글 작성</h1>
                <p class="text-center text-muted mb-5">내용을 작성하고 아래 작성 완료 버튼을 클릭하세요.</p>

                <form asp-action="Create" novalidate
                      style="border-top: 4px solid #198754; padding: 2rem; background-color: #fff; box-shadow: 0 5px 20px rgba(0,0,0,0.06);">


                    <div class="row gy-4">
                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label">이메일</label>
                            <input asp-for="Email" class="form-control form-control-lg" placeholder="example@email.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Writer" class="form-label">작성자</label>
                            <input asp-for="Writer" class="form-control form-control-lg" placeholder="작성자명" />
                            <span asp-validation-for="Writer" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Title" class="form-label">제목</label>
                            <input asp-for="Title" class="form-control form-control-lg" placeholder="제목을 입력하세요" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Contents" class="form-label">내용</label>
                            <textarea asp-for="Contents" class="form-control" rows="6" placeholder="내용을 입력하세요"></textarea>
                            <span asp-validation-for="Contents" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="PostDate" class="form-label">작성일</label>
                            <input asp-for="PostDate" class="form-control" />
                            <span asp-validation-for="PostDate" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-3 mt-5">
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2">
                            목록으로
                        </a>
                        <button type="submit" class="btn btn-dark px-5 py-2">
                            작성 완료
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>